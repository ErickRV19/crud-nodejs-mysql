                            <form action="" >

                              <h2 class="subtitle"   id="proveedores">Proveedores</h2>
                            <h6>Aqui podras consultar, editar y eliminar datos de los proveedores</h6>
                            <table  class="table table-bordered table-hover">
                              <thead>
                                <tr>
                                  <th>Id Proveedores</th>
                                  <th>Nombre empresa</th>
                                  <th>Telefono</th>
                                  <th>Id Domicilio</th>
                                  <th>Id Productos</th>
                                  <th>Rfc</th>
                                  <th>Accion</th>
                                </tr>
                              </thead>
                              <tbody >
                                <% if (data) { %>
                                  <% for(var i = 0; i < data.length; i++) { %>
                                    <tr>
                                        
                                      <td><%= data[i].idProveedores %></td>
                                      <td><%= data[i].nombre_empresa %></td>
                                      <td><%= data[i].telefono %></td>
                                      <td><%= data[i].idDomicilio %></td>
                                      <td><%= data[i].idProductos %></td>
                                      <td><%= data[i].rfc %></td>
                                      <td>
                                        <a href="/update/<%= data[i].idProveedores %>" class="btn btn-info">Edit</a>
                                        <a href="/delete/<%= data[i].idProveedores %>" class="btn btn-danger">Delete</a>
                                      </td>
                                    </tr>
                                  <% } %>
                                <% } %>
                              </tbody>
                            </table>
                            
                
