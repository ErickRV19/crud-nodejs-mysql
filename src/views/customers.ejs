                                    </form>

                                    <form action="/addProveedor" method="POST">
                                            <h6>Datos del proveedor (empresa)</h6>
                                            <div class="form-row">
                                               
                                                <div class="form-group col-md-6">
                                                        <label for="inputAddress">Nombre</label>
                                                        <input type="text" class="form-control" name="nombre_empresa" placeholder="proveedor x">
                                                      </div>
                                                
                                                <div class="form-group col-md-4">
                                                  <label for="inputAddress2">Telefono</label>
                                                  <input type="number" class="form-control" name="telefono" placeholder=" 5522880000">
                                                </div>
                                                <div class="form-group col-md-6">
                                                        <label for="inputEmail4">Id Domicilio</label>
                                                        <input type="text" class="form-control" name="idDomicilio" placeholder="123456789">
                                                      </div>
                                                      <div class="form-group col-md-6">
                                                            <label for="inputEmail4">Id producto</label>
                                                            <input type="text" class="form-control" name="idProductos" placeholder="id del producto que nos vendera">
                                                          </div>
                                                                         
                                        <div class="form-group col-md-12">
                                                <label for="inputAddress">Rfc</label>
                                                <input type="text" class="form-control" name="rfc" placeholder="rfc del responsable de la empresa">
                                              </div>
                                            </div>
                                            <button type="submit" class="btn btn-success">Registrar Proveedor</button>
                                            </form>
