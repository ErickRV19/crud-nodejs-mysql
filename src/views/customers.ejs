                                            <input type="text" class="form-control" name="municipio" placeholder="Municipio x">
                                          </div>
                                          <div class="form-group col-md-2">
                                                <label for="inputZip">Codigo Postal</label>
                                                <input type="text" class="form-control" id="" name="cp">
                                         </div>
                                         <div class="form-group col-md-6">
